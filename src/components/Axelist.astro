const calidades = [0, 1, 2, 3, 4, 5];
const ubicacion = [
  "Bridgewatch",
  "Lymhurst",
  "Fort Sterling",
  "Martlock",
  "Thetford",
  "Caerleon",
  "Black Market",
];

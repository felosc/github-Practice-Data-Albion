---
import "../style/gobla.css";

  // Realizamos la llamada a la API al momento de renderizar la página
  const response = await fetch('https://gutendex.com/books/');
  const data = await response.json(); // Parseamos la respuesta a JSON
  
  const books = data.results; // Suponiendo que los libros están en la clave 'results'

---

<!--- poooorrr la democracia se un heldiver jajaja no lo juego pero me gusta el
concepto ----->
<h1>Lista de Libros</h1>

<ul id="list-boocks">
  {books.map((book) => (
    <li id="li-boocks" key={book.id}>
      <div>
      <img src={book.formats["image/jpeg"]} alt="Cover Image" width="120px" height="220px" />
      <h3>{book.title}</h3>
      <p>Autor: {book.authors[0].name}</p>
      <p>Idioma: {book.languages}</p>
      <p>Temas: {book.bookshelves[1]}</p>
      </div>
    </li>
  ))}
</ul>
